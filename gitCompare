git config   diff.tool bc4
git config   difftool.prompt false
git config   difftool.bc4.cmd '"/Applications/Beyond Compare.app/Contents/MacOS/bcomp" "$LOCAL" "$REMOTE"'

git config   merge.tool bc4
git config   mergetool.prompt false
git config   mergetool.bc4.cmd '"/Applications/Beyond Compare.app/Contents/MacOS/bcomp" "$LOCAL" "$REMOTE" "$BASE" "$MERGED"'
git config   mergetool.bc4.trustexitcode true